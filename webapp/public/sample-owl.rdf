<?xml version="1.0"?>
<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:owl="http://www.w3.org/2002/07/owl#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
         xmlns:ex="http://example.org/family#">

  <owl:Ontology rdf:about="http://example.org/family">
    <rdfs:label>Family Ontology</rdfs:label>
    <rdfs:comment>A simple ontology about family relationships</rdfs:comment>
  </owl:Ontology>

  <!-- Classes -->
  <owl:Class rdf:about="http://example.org/family#Person">
    <rdfs:label>Person</rdfs:label>
  </owl:Class>

  <owl:Class rdf:about="http://example.org/family#Parent">
    <rdfs:label>Parent</rdfs:label>
    <rdfs:subClassOf rdf:resource="http://example.org/family#Person"/>
  </owl:Class>

  <owl:Class rdf:about="http://example.org/family#Child">
    <rdfs:label>Child</rdfs:label>
    <rdfs:subClassOf rdf:resource="http://example.org/family#Person"/>
  </owl:Class>

  <owl:Class rdf:about="http://example.org/family#Father">
    <rdfs:label>Father</rdfs:label>
    <rdfs:subClassOf rdf:resource="http://example.org/family#Parent"/>
  </owl:Class>

  <owl:Class rdf:about="http://example.org/family#Mother">
    <rdfs:label>Mother</rdfs:label>
    <rdfs:subClassOf rdf:resource="http://example.org/family#Parent"/>
  </owl:Class>

  <!-- Properties -->
  <owl:ObjectProperty rdf:about="http://example.org/family#hasParent">
    <rdfs:label>has parent</rdfs:label>
    <rdfs:domain rdf:resource="http://example.org/family#Person"/>
    <rdfs:range rdf:resource="http://example.org/family#Parent"/>
    <owl:inverseOf rdf:resource="http://example.org/family#hasChild"/>
  </owl:ObjectProperty>

  <owl:ObjectProperty rdf:about="http://example.org/family#hasChild">
    <rdfs:label>has child</rdfs:label>
    <rdfs:domain rdf:resource="http://example.org/family#Parent"/>
    <rdfs:range rdf:resource="http://example.org/family#Person"/>
    <owl:inverseOf rdf:resource="http://example.org/family#hasParent"/>
  </owl:ObjectProperty>

  <owl:ObjectProperty rdf:about="http://example.org/family#hasFather">
    <rdfs:label>has father</rdfs:label>
    <rdfs:subPropertyOf rdf:resource="http://example.org/family#hasParent"/>
    <rdfs:range rdf:resource="http://example.org/family#Father"/>
  </owl:ObjectProperty>

  <owl:ObjectProperty rdf:about="http://example.org/family#hasMother">
    <rdfs:label>has mother</rdfs:label>
    <rdfs:subPropertyOf rdf:resource="http://example.org/family#hasParent"/>
    <rdfs:range rdf:resource="http://example.org/family#Mother"/>
  </owl:ObjectProperty>

  <!-- Sample Individuals -->
  <owl:NamedIndividual rdf:about="http://example.org/family#John">
    <rdf:type rdf:resource="http://example.org/family#Father"/>
    <rdfs:label>John</rdfs:label>
    <ex:hasChild rdf:resource="http://example.org/family#Mary"/>
    <ex:hasChild rdf:resource="http://example.org/family#Tom"/>
  </owl:NamedIndividual>

  <owl:NamedIndividual rdf:about="http://example.org/family#Jane">
    <rdf:type rdf:resource="http://example.org/family#Mother"/>
    <rdfs:label>Jane</rdfs:label>
    <ex:hasChild rdf:resource="http://example.org/family#Mary"/>
    <ex:hasChild rdf:resource="http://example.org/family#Tom"/>
  </owl:NamedIndividual>

  <owl:NamedIndividual rdf:about="http://example.org/family#Mary">
    <rdf:type rdf:resource="http://example.org/family#Child"/>
    <rdfs:label>Mary</rdfs:label>
    <ex:hasFather rdf:resource="http://example.org/family#John"/>
    <ex:hasMother rdf:resource="http://example.org/family#Jane"/>
  </owl:NamedIndividual>

  <owl:NamedIndividual rdf:about="http://example.org/family#Tom">
    <rdf:type rdf:resource="http://example.org/family#Child"/>
    <rdfs:label>Tom</rdfs:label>
    <ex:hasFather rdf:resource="http://example.org/family#John"/>
    <ex:hasMother rdf:resource="http://example.org/family#Jane"/>
  </owl:NamedIndividual>

</rdf:RDF>